{
  "name": "Neoprice",
  "description": "Fetch the price of the item using Jellyneo's database. Save some item!",
  "manifest_version": 2,
  "version": "0.0.0.1",
  "content_scripts": [
    {
      "matches": [ "http://neopets.com/*" ],
      "js": ["assets/jquery.min.js", "background.js"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "permissions": ["storage", "notifications", "http://items.jellyneo.net/", "http://neopets.com/"],
  "icons": { "128": "neoprice.png" }

}
